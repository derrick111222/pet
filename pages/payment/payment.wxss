/* pages/payment/payment.wxss */
page {
  background-color: #f8f8f8;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 页面标题 */
.page-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: relative;
  z-index: 10;
}

.back-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon image {
  width: 40rpx;
  height: 40rpx;
}

.page-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

/* 订单信息 */
.order-info {
  background-color: #fff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.order-status {
  font-size: 32rpx;
  font-weight: 500;
  color: #ff6b6b;
}

.payment-deadline {
  font-size: 26rpx;
  color: #666;
}

.countdown {
  color: #ff6b6b;
  font-weight: 500;
}

.order-amount {
  text-align: center;
  margin: 40rpx 0;
}

.currency {
  font-size: 40rpx;
  font-weight: 500;
  color: #333;
}

.amount {
  font-size: 60rpx;
  font-weight: 600;
  color: #333;
}

.order-detail {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 26rpx;
  color: #999;
}

.value {
  font-size: 26rpx;
  color: #666;
}

/* 支付方式 */
.payment-methods {
  background-color: #fff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.method-list {
  
}

.method-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.method-item:last-child {
  border-bottom: none;
}

.method-item.selected {
  
}

.method-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.method-icon image {
  width: 100%;
  height: 100%;
}

.method-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.method-check {
  width: 40rpx;
  height: 40rpx;
}

.method-check image {
  width: 100%;
  height: 100%;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.payment-info {
  flex: 1;
  font-size: 28rpx;
  color: #666;
}

.price {
  font-size: 32rpx;
  font-weight: 500;
  color: #ff6b6b;
}

.confirm-btn {
  width: 240rpx;
  height: 80rpx;
  background-color: #ff6b6b;
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
}